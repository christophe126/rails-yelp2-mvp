  <div class="container w-100">
  <h5 class="text-center">Ajouter une review</H5>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="mt-3">
      <%= f.input :content, as: :text, class: "form-control", row:3 %>
    </div>
    <div class="mt-3">
      <%= f.input :rating, collection: 0..5, class: "form-control" %>
    </div>
    <div class="mt-2 btn-group w-100">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
