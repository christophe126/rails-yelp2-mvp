<div class="container mt-5">
  <h1 class="text-center">Ajouter un nouveau restaurant</h1>
  <div class="container w-75 mt-3">
    <%= simple_form_for(@restaurant) do |f| %>
      <div class="mt-5">
        <%= f.input :name, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= f.input :address, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= f.input :phone_number, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= f.input :category, collection: Restaurant::CATEGORIES, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= f.input :image_url, class: "form-control" %>
      </div>
      <div class="mt-4 btn-group w-100">
        <%= link_to "Cancel", restaurants_path , class: "btn btn-outline-primary"  %>
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
